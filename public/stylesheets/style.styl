body
    padding: 50px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
    color: #00B7FF

#title
    font: Consolas, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace, serif;

#loginButton > i
    font-size 24px
    margin-left 6px

.lesson
    background white
    border-color gray
    border-radius 4px
    border-style solid
    border-width 1px
    padding 10px
    margin-bottom 10px

.lesson > .header
    border-bottom-color black
    border-bottom-style solid
    border-bottom-width 1px
    height 20px

.lesson > .header .pull-left
    float: left
    margin-left: 0px

.lesson > .header .pull-right
    float: right
    margin-right: 0px

.lesson > .header > a
    margin-right 4px

.lesson .repoLink
    font-size 14px
    color gray

.lesson .lessonText
    margin-top 6px
    display block

.lesson .lessonDate
    color gray
